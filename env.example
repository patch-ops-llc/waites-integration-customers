# Waites Customer Sync Service - Environment Variables
# Copy this file to .env for local development

# =============================================================================
# HubSpot Configuration
# =============================================================================
HUBSPOT_PAT=your_hubspot_personal_access_token
HUBSPOT_PORTAL_ID=48162723
HUBSPOT_FACILITY_OBJECT_TYPE_ID=2-43136116
HUBDB_TABLE_ID=126279838

# =============================================================================
# NetSuite Configuration (Token-Based Authentication)
# =============================================================================
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Cron Configuration
# =============================================================================
CRON_INTERVAL_MINUTES=5
CRON_ENABLED_ON_START=true

# =============================================================================
# Optional: Slack Notifications
# =============================================================================
# SLACK_TOKEN=your_slack_bot_token
# SLACK_CHANNEL=C092UMM690S
# SLACK_NOTIFICATIONS_ENABLED=true

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
FLASK_SECRET_KEY=your_flask_secret_key
PRODUCTION_MODE=false
LOG_LEVEL=INFO
